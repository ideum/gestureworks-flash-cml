package com.gestureworks.cml.core
{	
	import com.gestureworks.cml.core.*;
	import com.gestureworks.utils.*;
	import com.gestureworks.cml.utils.*;
	import flash.display.*;
	import flash.events.*;
	
	/**
	 * The CMLDisplay class is the root container for a display generated by CML.
	 * 
	 * @author Ideum
	 * @see com.gestureworks.cml.core.CMLParser
	 * @see com.gestureworks.cml.core.CMLObjectList
	 */
	public class CMLDisplay extends Sprite
	{
		/**
		 * Constructor
		 */
		public function CMLDisplay()
		{
			if (stage) init();
			else addEventListener(Event.ADDED_TO_STAGE, init);			
			super();
		}
		
		/**
		 * initialization method
		 * @param	e
		 */
		private function init(e:Event = null):void 
		{	
			removeEventListener(Event.ADDED_TO_STAGE, init);
			DefaultStage.instance.stage = stage;			
			CMLParser.init(CMLLoader.settings, this);
			var p:* = parent;
			p.writeComplete = true;					
		}

	}
}